rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /posts/{postId} {
      allow read: if false; // Block all client reads - use server-side only
      allow write: if isAdmin(); // Allow admin writes for post management
    }
  }
}
